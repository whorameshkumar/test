{
    "name": "backend",
    "version": "1.0.0",
    "main": "index.js",
    "scripts": {
        "dev": "cross-env NODE_ENV=dev nodemon src/server.ts --legacy-watch",
        "build": "tsc",
        "format:check": "prettier . --check",
        "format:fix": "prettier . --write",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "prepare": "husky",
        
        "test": "jest --no-cache --coverage --all --runInBand",
        "test:watch": "jest --watch --runInBand",
        

        "start": "ts-node src/index.ts",
        "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/config/data-source.ts",
        "migration:run": "typeorm-ts-node-commonjs migration:run -d src/config/data-source.ts",
        "migration:create": "typeorm-ts-node-commonjs migration:create -d src/config/data-source.ts"
    },
    "author": "Ramesh",
    "license": "ISC",
    "description": "",
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cookie-parser": "^1.4.7",
        "@types/express": "^4.17.21",
        "@types/http-errors": "^2.0.4",
        "@types/jest": "^29.5.12",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/node": "^16.18.105",
        "@types/supertest": "^6.0.2",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^8.0.1",
        "@typescript-eslint/parser": "^8.0.1",
        "cross-env": "^7.0.3",
        "eslint": "^9.9.0",
        "eslint-config-prettier": "^9.1.0",
        "globals": "^15.9.0",
        "husky": "^9.1.4",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.8",
        "mock-jwks": "^1.0.10",
        "nodemon": "^3.1.4",
        "prettier": "3.3.3",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.4",
        "ts-node": "10.9.1",
        "typescript": "4.5.2"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ],
    "lint-staged": {
        "*.ts": [
            "npm run lint:fix",
            "npm run format:fix"
        ]
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "cookie-parser": "^1.4.6",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-jwt": "^8.4.1",
        "express-validator": "^7.2.0",
        "http-errors": "^2.0.0",
        "jsonwebtoken": "^9.0.2",
        "jwks-rsa": "^3.1.0",
        "pg": "^8.4.0",
        "reflect-metadata": "^0.1.13",
        "rsa-pem-to-jwk": "^1.1.3",
        "typeorm": "0.3.20",
        "winston": "^3.14.1"
    }
}
